<!DOCTYPE html>
<html>
	<head>
		<title>Starboy</title>
		<link rel="shortcut icon" href="img/logo.png" type="image/png" />
		<link rel="stylesheet" href="normalize.css" />
		<link rel="stylesheet" href="styles.css" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400&family=Roboto:wght@400;500&family=Ubuntu&family=Zen+Kurenaido&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg">
		<div class="headerCont logInHeader">
			<header class="signInHeader">
				<h1 id="logo"><img src="img/logo.png" /></h1>
				<div class="baristaOn desk text-center">
					<h2 class="desk">
						Barista on tap:
						<span class="baristaName"><%=user.local.email%></span>
					</h2>
				</div>
				<div class="accountBtn">
					<a href="/"><button class="signIn">Store Front</button> </a>
					<a href="/logout"><button class="signIn">Logout</button> </a>
				</div>
			</header>
		</div>
		<div class="baristaOn mobile text-center">
			<h2>
				Barista on tap:
				<span class="baristaName"><%=user.local.email%></span>
			</h2>
		</div>
		<div class="container">
			<div class="mainListCont desk row">
				<div class="listCont col-md-6">
					<section class="addItem">
						<h2>Orders Pending</h2>
					</section>
					<!-- !pending ORDERS -->
					<div class="col-12 orderCont">
						<div
							id="orderDisp"
							data-bs-spy="scroll"
							data-bs-target="#navbar-example3"
							data-bs-offset="0"
							tabindex="0"
						>
							<div class="todoListCont">
								<ul class="todos todoList">
									<% orders.forEach((order)=>{ %> <% if(order.status !=
									'complete') {%>
									<li>
										<h3><%=order.costumerName%></h3>
										<input
											type="checkbox"
											name="status"
											class="status checkbox"
											value="<%=order.status%>"
											id="<%=user.local.email%>"
											data-objid="<%=order._id%>"
										/>
										<label class="todoItem" for="<%=order._id%>"
											><%=order.orders%></label
										>
									</li>
									<%}%> <%})%>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<section class="listControls col-md-6">
					<!-- !completed Orders -->
					<section class="addItem">
						<h2>Completed Orders</h2>
					</section>

					<div class="col-12 orderCont">
						<div
							id="orderDisp"
							data-bs-spy="scroll"
							data-bs-target="#navbar-example3"
							data-bs-offset="0"
							tabindex="0"
						>
							<ul class="completedOrders">
								<% orders.forEach((order)=>{ %> <% if(order.status ===
								"complete"){ %>
								<div class="card">
									<h3 class="card-header"><%=order.costumerName%></h3>
									<li class="message list-group list-group-flush">
										<div class="list-group-item">
											<p class="todoItem custOrder" for="<%=order._id%>">
												<%=order.orders%>
											</p>
										</div>
										<p class="list-group-item">
											Order Completed by: <span><%=order.baristaName%></span>
										</p>
										<div class="list-group-item">
											<i
												class="fa fa-trash"
												value="<%=order._id%>"
												aria-hidden="true"
											></i>
										</div>
									</li>
								</div>
								<%}%> <%})%>
							</ul>
						</div>
					</div>
					<div class="row d-flex justify-content-center align-items-center">
						<button class="clearCompleteBtn col-11">Clear Completed</button>
						<button class="clearListBtn col-11">Clear All</button>
					</div>
				</section>
			</div>
		</div>

		<script src="main.js"></script>
		<script
			src="https://kit.fontawesome.com/c0e668a8ad.js"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
